---
interface Props {
    date: string;
    name: string;
    src : string;  
    current: boolean;
}

const { date, name, src, current = false } = Astro.props;
---

<li class="mb-10 ms-6">            
    <span class:list={['-start-5 w-9 h-9', { '-start-3 w-6 h-6 ring-8': current }]} class="absolute flex items-center justify-center rounded-full ">
        <img class="rounded-full shadow-lg" src={src} alt={name}/>
    </span>

    <div class="p-2 py-1 rounded shadow-sm bg-gray-700 border-gray-600 ms-3 timeline-card">
        <time class="text-sm font-medium">
            {date}
        </time>

        <div class="text-sm font-normal text-gray-100"> 
            <slot />
        </div>
    </div>
</li>